<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    @RenderSection("links",false)
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <style>
        .footer-style {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            height: 2px;
            background-color: red;
            color: white;
            text-align: center;
        }
    </style>
</head>
<body>
    <!--Navigation section-->
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigator">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#"><span class="glyphicon glyphicon-education"></span>Nahid Chowdhury</a>
            </div>
            <div class="collapse navbar-collapse" id="navigator">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="@Url.Action("Home","Home")">Home</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Article")">Blog</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Qualification","Home")">Education & Skills</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Projects","Home")">Projects</a>
                    </li>
                    <li>
                        <a href="@Url.Action("About","Home")">About</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Contact","Home")">Contact</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Login","Home")">Login <span class="glyphicon glyphicon-log-in"></span></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <!--Content goes here-->
    @RenderBody()
    
    @RenderSection("scripts",false)
    <!--Footer section-->
    <footer class="container-fluid text-center footer-style" style="background-color: #333333; color: #f5f6f7;">
        <p>All right reserved by Nahid Chowdhury</p>
    </footer>
</body>
</html>
